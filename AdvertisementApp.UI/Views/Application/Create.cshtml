@model AdvertisementCreateDto

<div class="container-fluid">
	<form asp-action="Create" asp-controller="Application" method="post">
		<div class="mb-3">
			<label>Advertisement Title:</label>
			<input type="text" asp-for="@Model.Title" class="form-control"/>
		</div>
		<div class="mb-3">
			<label class="form-check-label">Active</label>
			<input type="checkbox" asp-for="@Model.Status" class="form-check-input" />
		</div>

		<div class="mb-3">
			<label>Content:</label>
			<textarea asp-for="@Model.Description" class="form-control"></textarea>
		</div>

		<div class="mb-3">
		   <button type="submit" class="btn btn-primary">Save</button>
		</div>

	</form>
</div>




