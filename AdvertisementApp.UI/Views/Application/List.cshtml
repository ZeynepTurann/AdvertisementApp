@model List<AdvertisementListDto>

<div class="container-fluid">
@{
	if (Model?.Count > 0)
	{
		<div class="text-end my-3 p-1"> 
		   <a asp-action="Create" asp-controller="Application">Create A New Job Advertisement</a>
		</div>
		<table class="mt-3 table table-sm table-hover table-striped">
			<thead>
				<tr>
					<th>Advertisement Title</th>
					<th>Advertisement Definition</th>
					<th>Advertisement Created Date</th>
					<th>Advertisement Status</th>
					<th>Process</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var advertisement in Model)
				{
					<tr>
						<td>@advertisement.Title</td>
						<td>@advertisement.Description</td>
						<td>@advertisement.CreateDate.ToString("MM/dd/yyyy")</td>
						<td>@(advertisement.Status?"Active":"Passive")</td>
						
						<td>
						<a  asp-action="Update" asp-controller="Application" asp-route-id="@advertisement.Id" >Edit</a>
						<a  asp-action="Delete" asp-controller="Application" asp-route-id="@advertisement.Id" >Delete</a>
						</td>
					</tr>
				}

			</tbody>

		</table>
	}
	else
	{
		<div class="text-end my-3 p-1"> 
		   <a asp-action="Create" asp-controller="Application">Create A New Job Advertisement</a>
		</div>
		<div class="mt-3 text-center lead">It cannot be found any advertisements</div>
	}

}
</div>

