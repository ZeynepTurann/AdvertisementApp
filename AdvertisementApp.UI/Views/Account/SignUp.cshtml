@model UserCreateModel

<div class="mt-4">
	<form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
		<div class="mb-3">
			<label>First Name:</label>
			<input type="text" class="form-control" asp-for="@Model.Firstname" />
		</div>
		<div class="mb-3">
			<label>SurName:</label>
			<input type="text" class="form-control" asp-for="@Model.Surname" />
		</div>
		<div class="mb-3">
			<label>UserName:</label>
			<input type="text" class="form-control" asp-for="@Model.Username" />
		</div>
		<div class="mb-3">
			<label>Phone Number:</label>
			<input type="text" class="form-control" asp-for="@Model.PhoneNumber" />
		</div>
		<div class="mb-3">
			<select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
				<option value="0" >Choose Your Gender</option>
			</select>
		</div>
		<div class="mb-3">
			<label>Password:</label>
			<input type="password" class="form-control" asp-for="@Model.Password" />
		</div>
		<div class="mb-3">
			<label>Confirm Password:</label>
			<input type="password" class="form-control" asp-for="@Model.ConfirmPassword" />
		</div>
		<div class="mb-3 text-end">
			<button type="submit" class="btn btn-primary">Sign Up</button>
		</div>
		<div class="text-danger" asp-validation-summary="All"></div>
	</form>
</div>
